{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist-server/server",
		"rootDir": "server",
		"resolveJsonModule": true,
		"types": ["node"],
		"declaration": false
	},
	"include": ["server/**/*"],
	"exclude": ["node_modules", "dist", "dist-server"]
}
